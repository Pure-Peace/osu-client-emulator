{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src",
    "./examples"
  ]
}